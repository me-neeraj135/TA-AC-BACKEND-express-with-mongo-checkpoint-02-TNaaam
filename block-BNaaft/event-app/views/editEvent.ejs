<!-- @format -->

<% include partial/header %>
<body class="formPageBody">
  <div class="container">
    <form
      class="eventForm flex flex-direction-column justify-between"
      action="/events/<%= event.id %>/update"
      method="post"
    >
      <h2 style="text-align: center">update event</h2>

      <input
        type="text"
        name="title"
        placeholder="title"
        value="<%= event.title %>"
      />

      <textarea
        name="summary"
        id=""
        cols="30"
        rows="7"
        aria-placeholder="summary"
      >
      <%= event.summary %>
      </textarea>

      <input
        type="text"
        name="host"
        placeholder="host"
        value="<%= event.host %>"
      />

      <div class="formDateBox flex justify-between">
        <div>
          <label for=""> start date</label>
          <input type="date" name="startDate" value="<%= event.startDate%>" />
        </div>
        <div>
          <label for="">End date</label>
          <input type="date" name="endDate" value="<%= event.endDate %>" />
        </div>
      </div>

      <input
        type="text"
        name="categories"
        placeholder="categories"
        value="<%= event.categories %>"
      />

      <input
        type="text"
        name="location"
        placeholder="location"
        value="<%= event.location %>"
      />
      <input type="submit" value="update Event" />
    </form>
  </div>
</body>
<% include partial/footer %>
